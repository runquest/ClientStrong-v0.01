<%= link_to "Back to client", client_path(@client) %><br />
<h2> Create a workout <em><%= @client.name %> </em></h2>

<%= form_for([@client, @workout]) do |f| %>
<% if @workout.errors.any? %>
<div>
<%= pluralize(@workout.errors.count, "error") %> prevented the workout from being saved: 
<ul>
<% @workout.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
</div>
<% end %>

<div>
<%= f.label "title" %><br>
<%= f.text_field "title" %>
</div>
<div>
<%= f.label "date" %><br>
<%= f.date_field "date" %>
</div>
<div>
<%= f.label "description" %><br>
<%= f.text_area "description", size:"24x6" %>
</div>
<div><%= f.submit "Submit" %></div>
<% end %>
